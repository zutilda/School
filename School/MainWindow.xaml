<Window x:Class="School.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:School"
        mc:Ignorable="d"
        Title="Школа иностранных языков" MinHeight="450" MinWidth="800" Icon="/image/school_logo.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <Grid>
           
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Height="70" Source="/image/school_logo.ico" Style="{StaticResource ImageLogo}"></Image>
                <TextBlock VerticalAlignment="Center" Style="{StaticResource HeaderText}">Леарн</TextBlock>
            </StackPanel>
         
        </Grid>
        
        <StackPanel Grid.Row="1">
            <Frame Name="frmMain" NavigationUIVisibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
